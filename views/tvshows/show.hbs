<div class="row">
    <div class="col s12 m8">
        <h3>{{tvshow.title}}
            <small>{{{editIcon tvshow.user user tvshow._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{tvshow.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{tvshow.user.displayName}}</span>
                <img src="{{tvshow.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/tvshows/user/{{tvshow.user._id}}">More From {{tvshow.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>